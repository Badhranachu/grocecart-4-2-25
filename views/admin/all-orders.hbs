<div class="container mt-5">
  <h1 class="text-center mb-4">All Orders</h1>

  <!-- Check if there are orders -->
  {{#if orders}}
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            {{!-- <th>Order ID</th> --}}
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Order Status</th>
            <th>Order Date</th>
            {{!-- <th>User ID</th> --}}
            <th>User Name</th>
            <th>User Address</th>
            <th>User Phone</th> <!-- Display User Phone -->
          </tr>
        </thead>
        <tbody>
          {{#each orders}}
            <tr>
              {{!-- <td>{{this._id}}</td> --}}
              <td>{{this.productName}}</td>
              <td>{{this.quantity}}</td>
              <td>{{this.totalPrice}}</td>
              <td>{{this.orderStatus}}</td>
              <td>{{this.orderDate}}</td>
              {{!-- <td>{{this.userId}}</td> --}}
              <td>{{this.userName}}</td>
              <td>{{this.userAddress}}</td>
              <td>{{this.userPhone}}</td> <!-- Display User Phone -->
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <p class="text-center no-orders">No orders found.</p>
  {{/if}}
</div>

<!-- Link to Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">

<style>
  .no-orders {
    font-size: 1.5rem;
    color: #6c757d;
    font-family: 'Roboto', sans-serif;
  }

  .table-responsive {
    margin-top: 30px;
  }

  th, td {
    text-align: center;
    vertical-align: middle;
  }

  th {
    background-color: black;  /* Blue background */
    color: white;
    font-size: 1.1rem;
    font-family: Arial, sans-serif;
  }

  td {
    background-color: #f8f9fa;  /* Light gray background for cells */
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
  }

  table {
    width: 100%;
    table-layout: fixed;
  }
</style>
