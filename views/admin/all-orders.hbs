<div class="container mt-5">
  <h2 class="text-center text-green">All Users</h2>
  <div class="table-responsive">
    <table class="table table-bordered mt-4">
      <thead class="table-header">
        <tr>
          <th>#</th>
          <th>Profile Image</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Address</th>
          <th>Date Of Birth</th>
          <th>Place</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{@index}}</td>
          <td>
            <img src="{{this.imagePath}}" alt="Profile Image" class="profile-img">
          </td>
          <td>{{this.Name}}</td>
          <td>{{this.Email}}</td>
          <td>{{this.PhoneNumber}}</td>
          <td>{{this.Address}}</td>
          <td>{{this.DateOfBirth}}</td>
          <td>{{this.Place}}</td>
        </tr>
        {{else}}
        <tr>
          <td colspan="8" class="text-center no-users">No users found</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

<style>
  body {
    background-color: #0a0a0a; /* Darker black */
    color: #d4edda; /* Light green text */
    font-family: 'Roboto', sans-serif;
  }

  .text-green {
    color: #32cd32; /* Bright neon green */
    font-weight: bold;
  }

  .table-header {
    background-color: #111;
    color: #32cd32;
    font-size: 1.2rem;
    text-transform: uppercase;
  }

  .table {
    background-color: #181818;
    color: white;
    border: 1px solid #32cd32;
  }

  th, td {
    text-align: center;
    vertical-align: middle;
    padding: 12px;
    border: 1px solid #32cd32;
  }

  td {
    background-color: #222;
    color: #d4edda;
  }

  .profile-img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 2px solid #32cd32;
  }

  tr:hover {
    background-color: #2a2a2a;
    transition: 0.3s;
  }

  .no-users {
    font-size: 1.2rem;
    color: #999;
  }
</style>
