<section>
  <div class="container text-light">
    <div class="row">
      <div class="col mt-3">
        <h2 class="text-center text-success">Add Products</h2>
        <form action="/admin/addproducts" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="name" class="form-label text-success">Name</label>
            <input type="text" id="name" name="name" class="form-control bg-dark text-light" required />
          </div>
          <div class="mb-3">
            <label for="category" class="form-label text-success">Category</label>
            <select id="category" name="category" class="form-control bg-dark text-light" required onchange="checkCategory(this)">
              <option value="" disabled selected>Select a category</option>
              <option value="new">+ Add New Category</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="price" class="form-label text-success">Price</label>
            <input type="number" id="price" name="price" class="form-control bg-dark text-light" step="0.01" required />
          </div>
          <div class="mb-3">
            <label for="quantity" class="form-label text-success">Quantity</label>
            <input type="number" id="quantity" name="quantity" class="form-control bg-dark text-light" required />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label text-success">Description</label>
            <textarea id="description" name="description" class="form-control bg-dark text-light" rows="4"></textarea>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label text-success">Upload Product Image</label>
            <input type="file" id="image" name="image" class="form-control bg-dark text-light" accept="image/*" onchange="previewImage(event)" required />
          </div>
          <div class="mb-3">
            <label for="image-preview" class="form-label text-success">Image Preview</label>
            <img id="image-preview" src="" alt="Image Preview" style="max-width: 300px; display: none; border: 2px solid #28a745;" />
          </div>
          <button type="submit" class="btn btn-success mt-3 w-100">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  body {
    background-color: #121212;
  }
  .container {
    background-color: #222;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.2);
  }
  .form-control {
    border: 1px solid #28a745;
  }
  .form-control:focus {
    border-color: #45d163;
    box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
  }
  .btn-success:hover {
    background-color: #45d163;
  }
</style>
