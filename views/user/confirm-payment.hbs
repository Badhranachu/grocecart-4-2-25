<div class="container py-5">
  <!-- Page Heading -->
  <h2 class="text-center mb-4 text-white fw-bold bg-success p-3 rounded">Confirm Your Order and Payment</h2>

  {{#if isMultiple}}
    <!-- If multiple products, display all products in the cart -->
    <div class="card mb-5 p-4 shadow-lg border-0 rounded-4 bg-light">
      <div class="card-body">
        <h4 class="card-title text-dark mb-3">Your Cart Items:</h4>
        {{#each cartDetails}}
          <div class="mb-3">
            <div class="d-flex justify-content-between">
              <div>
                <strong>Product:</strong> {{this.name}}
              </div>
              <div>
                <strong>Price:</strong> ₹{{this.price}} x {{this.quantity}} = ₹{{this.total}}
              </div>
            </div>
          </div>
        {{/each}}
        <div class="d-flex justify-content-between mt-4 border-top pt-3">
          <div>
            <strong>Total Price:</strong> ₹{{totalPrice}}
          </div>
          <div>
            <strong>Payment Method:</strong> {{paymentMethod}}
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <!-- Single Product Confirmation -->
    <div class="card mb-5 p-4 shadow-lg border-0 rounded-4 bg-light">
      <div class="card-body text-center">
        <img
          src="{{product.image}}"
          alt="{{product.name}}"
          class="img-fluid rounded shadow-sm mb-4"
          style="max-height: 200px;"
        />
        <h4 class="card-title text-dark mb-3">
          <strong>Product:</strong> {{product.name}}
        </h4>
        <p class="card-text text-muted">
          <strong>Total Price:</strong> ₹{{totalPrice}}
        </p>
        <p class="card-text text-muted">
          <strong>Payment Method:</strong> {{paymentMethod}}
        </p>
        <p class="card-text text-muted">
          <strong>Quantity:</strong> {{quantity}}
        </p>
      </div>
    </div>
  {{/if}}

  <!-- Order Confirmation Form -->
  <div class="text-center">
    <form
      action="/confirmed"
      method="POST"
      class="d-inline-block p-4 shadow-lg rounded-4 bg-success text-white"
    >
      {{#if isMultiple}}
        <input type="hidden" name="cartDetails" value='{{json cartDetails}}' />
      {{else}}
        <input type="hidden" name="productId" value="{{product.id}}" />
        <input type="hidden" name="productName" value="{{product.name}}" />
        <input type="hidden" name="totalPrice" value="{{totalPrice}}" />
        <input type="hidden" name="quantity" value="{{quantity}}" />
        <input type="hidden" name="paymentMethod" value="{{paymentMethod}}" />
      {{/if}}

      <button
        type="submit"
        class="btn btn-light btn-lg mt-3 px-5 py-3 rounded-4 shadow-lg"
      >
        Confirm Order
      </button>
    </form>
  </div>

  <!-- Additional Links -->
  <div class="text-center mt-5">
    <a
      href="/"
      class="btn btn-outline-success btn-lg mx-2 px-4 rounded-4 shadow-lg"
    >
      <i class="bi bi-house"></i> Back to Home
    </a>
    <a
      href="/orders"
      class="btn btn-outline-secondary btn-lg mx-2 px-4 rounded-4 shadow-lg"
    >
      <i class="bi bi-card-list"></i> View All Orders
    </a>
  </div>
</div>