<div class="container mt-5">
  {{#if errorMessage}}
    <!-- Stock Unavailable Message -->
    <h2 class="text-center mb-4 text-danger fw-bold">⚠️ Not Enough Stock</h2>

    <div class="text-center">
      <!-- Product Image -->
      <img src="{{productImage}}" alt="{{productName}}" class="img-fluid mb-4 rounded shadow" style="max-height: 200px;" />

      <!-- Product Details -->
      <div class="card p-4 shadow-sm mb-4 border-danger border-2 rounded-3 bg-light">
        <h4 class="card-title text-dark mb-3">
          <strong>📦 Product:</strong> {{productName}}
        </h4>
        <p class="card-text"><strong>✅ Available Quantity:</strong> {{availableQuantity}}</p>
      </div>
    </div>

    <p class="text-center mt-4 text-danger fs-5">
      ❌ Unfortunately, there isn’t enough stock to complete your order.
    </p>

    <div class="text-center mt-3">
      <a href="/" class="btn btn-danger btn-lg mx-2 px-4 rounded-pill shadow-sm home-btn">
        🏠 Back to Home
      </a>
    </div>

  {{else}}
    <!-- Order Confirmed Message -->
    <h2 class="text-center mb-4 text-success fw-bold">🎉 Order Confirmed!</h2>

    <div class="text-center">
      <!-- Product Image -->
      <img src="{{productImage}}" alt="{{productName}}" class="img-fluid mb-4 rounded shadow" style="max-height: 200px;" />

      <!-- Order Details -->
      <div class="card p-4 shadow-sm mb-4 border-success border-2 rounded-3 bg-light">
        <h4 class="card-title text-dark mb-3">
          <strong>📦 Product:</strong> {{productName}}
        </h4>
        <p class="card-text"><strong>🔢 Quantity:</strong> {{quantity}}</p>
        <p class="card-text"><strong>💰 Total Price:</strong> ₹{{totalPrice}}</p>
        <p class="card-text"><strong>💳 Payment Method:</strong> {{paymentMethod}}</p>
        <p class="card-text"><strong>🆔 Product ID:</strong> {{productId}}</p>
      </div>
    </div>

    <p class="text-center mt-4 text-success fs-5">
      ✅ Thank you for your order! Your payment has been successfully processed.
    </p>

    <div class="text-center mt-3">
      <a href="/" class="btn btn-primary btn-lg mx-2 px-4 rounded-pill shadow-sm home-btn">
        🏠 Back to Home
      </a>
      <a href="/orders" class="btn btn-secondary btn-lg mx-2 px-4 rounded-pill shadow-sm orders-btn">
        📜 View Orders
      </a>
    </div>
  {{/if}}
</div>

<!-- Styles -->
<style>
  .home-btn, .orders-btn {
    transition: 0.3s ease-in-out;
  }

  .home-btn:hover {
    background-color: #dc3545;
    border-color: #dc3545;
    color: white;
  }

  .orders-btn:hover {
    background-color: #6c757d;
    border-color: #6c757d;
    color: white;
  }

  @media (max-width: 768px) {
    .home-btn, .orders-btn {
      display: block;
      width: 100%;
      margin-top: 10px;
    }
  }
</style>
