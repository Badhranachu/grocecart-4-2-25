<div class="container mt-5 p-4 rounded shadow" style="background-color: #f8f9fa;">
  {{#if errorMessage}}
    <!-- Show Insufficient Quantity Message -->
    <h2 class="text-center mb-4 text-danger">Not Enough Quantity</h2>

    <div class="text-center">
      <!-- Display Product Image -->
      <img
        src="{{productImage}}"
        alt="{{productName}}"
        class="img-fluid mb-4 rounded shadow"
        style="max-height: 200px; border: 2px solid #dc3545;"
      />

      <!-- Display Product Details -->
      <div class="card p-4 shadow-sm mb-4 border-0" style="background-color: #ffe5e5;">
        <h4 class="card-title text-dark mb-3">
          <strong>Product:</strong> {{productName}}
        </h4>
        <p class="card-text">
          <strong>Available Quantity:</strong> {{availableQuantity}}
        </p>
      </div>
    </div>

    <p class="text-center mt-4 text-danger">
      Unfortunately, there isn't enough stock available to fulfill your order.
    </p>
    
    <div class="text-center mt-3">
      <a href="/" class="btn btn-danger btn-lg mx-2">
        <i class="bi bi-house"></i> Back to Home
      </a>
    </div>

  {{else}}
    <!-- Show Order Confirmed Message -->
    <h2 class="text-center mb-4 text-success">Order Confirmed!</h2>

    <div class="text-center">
      <!-- Display Product Image -->
      <img
        src="{{productImage}}"
        alt="{{productName}}"
        class="img-fluid mb-4 rounded shadow"
        style="max-height: 200px; border: 2px solid #28a745;"
      />

      <!-- Display Product Details -->
      <div class="card p-4 shadow-sm mb-4 border-0" style="background-color: #e3fcef;">
        <h4 class="card-title text-dark mb-3">
          <strong>Product:</strong> {{productName}}
        </h4>
        <p class="card-text">
          <strong>Quantity:</strong> {{quantity}}
        </p>
        <p class="card-text">
          <strong>Total Price:</strong> â‚¹{{totalPrice}}
        </p>
        <p class="card-text">
          <strong>Payment Method:</strong> {{paymentMethod}}
        </p>
        <p class="card-text">
          <strong>Product ID:</strong> {{productId}}
        </p>
      </div>
    </div>

    <p class="text-center mt-4 text-success">
      Thank you for your order! Your payment has been successfully processed.
    </p>

    <div class="text-center mt-3">
      <a href="/" class="btn btn-success btn-lg mx-2">
        <i class="bi bi-house"></i> Back to Home
      </a>
      <a href="/orders" class="btn btn-secondary btn-lg mx-2">
        <i class="bi bi-card-list"></i> View All Orders
      </a>
    </div>
  {{/if}}
</div>
