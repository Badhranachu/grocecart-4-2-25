<div class="payment-container">
  <h2 class="text-center mb-4">ðŸ’³ Choose Your Payment Method</h2>

  {{#if isMultiple}}
  <div class="text-center mb-4">
    <h4 class="text-success"><strong>Total Price:</strong> â‚¹{{totalPrice}}</h4>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered text-center">
      <thead class="table-dark">
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        {{#each cartDetails}}
        <tr>
          <td>{{this.name}}</td>
          <td>â‚¹{{this.price}}</td>
          <td>{{this.quantity}}</td>
          <td>â‚¹{{this.total}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{else}}
  <div class="text-center mb-4">
    <h4 class="text-primary"><strong>Product:</strong> {{product.name}}</h4>
    <h4 class="text-success"><strong>Total Price:</strong> â‚¹{{totalPrice}}</h4>
  </div>
  {{/if}}

  <div class="payment-options">
    <!-- Cash on Delivery -->
    <div class="payment-card">
      <h4>ðŸšš Cash on Delivery (COD)</h4>
      <form action="/confirm-payment" method="POST">
        <input type="hidden" name="paymentMethod" value="COD" />
        {{#if isMultiple}}
        <input type="hidden" name="cartDetails" value='{{json cartDetails}}' />
        <input type="hidden" name="totalPrice" value="{{totalPrice}}" />
        {{else}}
        <input type="hidden" name="productName" value="{{product.name}}" />
        <input type="hidden" name="productId" value="{{product.id}}" />
        <input type="hidden" name="quantity" value="{{quantity}}" />
        <input type="hidden" name="totalPrice" value="{{totalPrice}}" />
        {{/if}}
        <button type="submit" class="btn btn-success btn-lg">Confirm COD</button>
      </form>
    </div>

    <!-- Online Payment -->
    <div class="payment-card">
      <h4>ðŸ’³ Online Payment</h4>
      <form action="/finalize-payment" method="POST">
        <input type="hidden" name="paymentMethod" value="Online" />
        {{#if isMultiple}}
        <input type="hidden" name="cartDetails" value='{{json cartDetails}}' />
        <input type="hidden" name="totalPrice" value="{{totalPrice}}" />
        {{else}}
        <input type="hidden" name="productName" value="{{product.name}}" />
        <input type="hidden" name="productId" value="{{product.id}}" />
        <input type="hidden" name="quantity" value="{{quantity}}" />
        <input type="hidden" name="totalPrice" value="{{totalPrice}}" />
        {{/if}}
        <button type="submit" class="btn btn-primary btn-lg">Pay Now</button>
      </form>
    </div>
  </div>
</div>

<!-- Styles -->
<style>
  .payment-container {
    max-width: 800px;
    margin: auto;
    padding: 30px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .payment-options {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
  }

  .payment-card {
    width: 45%;
    padding: 20px;
    border-radius: 10px;
    background: #f8f9fa;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .table-responsive {
    margin-top: 20px;
  }

  .table-dark {
    background: #343a40;
    color: white;
  }

  .btn-success {
    background-color: #28a745;
    border-color: #28a745;
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-lg {
    width: 100%;
    padding: 12px;
    font-size: 18px;
    border-radius: 6px;
  }

  .btn-success:hover {
    background-color: #218838;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  @media (max-width: 768px) {
    .payment-options {
      flex-direction: column;
      gap: 15px;
    }

    .payment-card {
      width: 100%;
    }
  }
</style>
