<section style="display: flex; justify-content: center; align-items: center; height: 100vh; background: linear-gradient(135deg, #ff9a9e, #fad0c4);">
  <div style="background: white; padding: 30px; border-radius: 10px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); width: 350px;">
    <h2 style="text-align: center; color: #333;">Sign In</h2>
    <form action="/login" method="post" enctype="multipart/form-data">
      {{#if loginErr}}
      <p style="color: red; text-align: center;">Incorrect email or password!</p>
      {{/if}}
      
      <div style="margin-bottom: 15px;">
        <label style="font-weight: bold; color: #555;">Email Address</label>
        <input type="email" name="Email" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" placeholder="Your email" required>
      </div>
      
      <div style="margin-bottom: 15px;">
        <label style="font-weight: bold; color: #555;">Password</label>
        <input type="password" name="Password" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 5px;" placeholder="Your password" required>
      </div>
      
      <div style="text-align: right; margin-bottom: 10px;">
        <a href="/signup" style="color: #ff6b6b; text-decoration: none;">Create an account</a>
      </div>
      
      <button type="submit" style="width: 100%; padding: 10px; background: #ff6b6b; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;">Login</button>
    </form>
  </div>
</section>